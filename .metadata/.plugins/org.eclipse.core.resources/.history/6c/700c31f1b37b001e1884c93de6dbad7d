
document.addEventListener('DOMContentLoaded', function() {
  var tableContainer = document.getElementById('table-container');
  var table = document.createElement('table');
  table.className = 'selfUnderstandingTable'; // CSS를 위한 클래스 추가
  table.setAttribute('border', '1');

  // 테이블 헤더 생성
  var tHead = table.createTHead();
  var headerRow = tHead.insertRow();
  var areaHeader = document.createElement('th');
  areaHeader.innerText = "진단 영역";
  headerRow.appendChild(areaHeader);
  var questionHeader = document.createElement('th');
  questionHeader.innerText = "지문";
  headerRow.appendChild(questionHeader);
  // 점수 헤더 생성
  for (var i = 1; i <= 5; i++) {
    var scoreHeader = document.createElement('th');
    scoreHeader.innerText = i + "점";
    headerRow.appendChild(scoreHeader);
  }

  // 자기이해 관련 질문들 배열
  var selfUnderstandingQuestions = [
  "나는 내가 어떤 일을 좋아하는지 안다.",
  "나는 내 자신에 대해 잘 알고 있다.",
  "나는 내가 무엇을 잘 하는지 안다.",
  "나는 내가 소중하게 생각하는 가치가 무엇인지 안다.",
  "나는 내가 즐겁게 할 수 있는 일이 무엇인지 안다."
    // ... 나머지 질문들 추가
  ];
  
  var majorCareerKnowledgeQuestions;

  // 테이블 바디 생성
  var tBody = document.createElement('tbody');
  table.appendChild(tBody);

  // 첫 번째 지문 행에 "진단 영역" 셀을 추가
  selfUnderstandingQuestions.forEach((question, index) => {
    var row = tBody.insertRow();
    if (index === 0) { // 첫 번째 행일 때만 "진단 영역" 셀을 추가
      var areaCell = row.insertCell();
      areaCell.innerText = "자기이해";
      areaCell.style.width = "15%"
      areaCell.rowSpan = selfUnderstandingQuestions.length; // 자기이해 지문 수만큼 rowspan 설정
    }
    var questionCell = row.insertCell();
    questionCell.innerText = question;
    // 각 지문에 대해 점수 선택 옵션 추가
    for (var i = 1; i <= 5; i++) {
      var scoreCell = row.insertCell();
      var radioButton = document.createElement('input');
      radioButton.type = 'radio';
      radioButton.name = 'question' + index;
      radioButton.value = i;
      radioButton.style.width = "15%"
      radioButton.style.height = "100%"
      scoreCell.appendChild(radioButton);
    }
  });

  tableContainer.appendChild(table);
});

function showAlert() {
  alert('경고창이 뜹니다!');
}

